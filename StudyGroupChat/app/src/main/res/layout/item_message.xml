<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvDateHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="15/06/2025"
        android:textColor="#64748B"
        android:textSize="12sp"
        android:gravity="center"
        android:visibility="gone"
        android:paddingVertical="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/baseline_account_circle_24"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_circle"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/tvSenderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đỗ Nguyễn Thiên"
            android:textSize="12sp"
            android:textColor="#64748B"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="5dp"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_chat"
            android:paddingVertical="8dp"
            android:paddingHorizontal="12dp">

            <!-- 1. Nội dung tin nhắn VĂN BẢN -->
<!--            android:visibility="visible" hiện thị mặc định-->
<!--            android:visibility="gone" ẩn hiện thị-->
            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="240dp"
                android:text="hi"
                android:textColor="#1E293B"
                android:textSize="15sp"
                android:visibility="visible"/> <!-- Hiển thị  -->

            <!-- 2. Nội dung tin nhắn HÌNH ẢNH -->
            <ImageView
                android:id="@+id/imgContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="240dp"
                android:scaleType="fitCenter"
                android:visibility="gone"
                tools:src="@tools:sample/backgrounds/scenic" />

            <!-- Thumbnail and playback for VIDEO -->
            <ImageView
                android:id="@+id/imgVideoThumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="240dp"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/btnPlayVideo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_play_circle_24"
                android:visibility="gone" />

            <!-- 3. Nội dung tin nhắn dạng FILE (PDF, DOCX, etc.) -->
            <LinearLayout
                android:id="@+id/fileContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:minWidth="200dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/ivFileIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/outline_insert_drive_file_24" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/tvFileName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="tailieu.pdf"
                        android:textColor="#1E293B"
                        android:textStyle="bold"
                        android:ellipsize="middle"
                        android:singleLine="true"/>

                    <TextView
                        android:id="@+id/tvFileSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.2 MB"
                        android:textSize="12sp"
                        android:textColor="#64748B"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15:03"
            android:textSize="10sp"
            android:textColor="#64748B"
            android:paddingStart="5dp"
            android:layout_gravity="start"
            android:layout_marginTop="2dp" />

    </LinearLayout>


    </LinearLayout>

</LinearLayout>
