<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp">

    <LinearLayout
        android:orientation="vertical"
        android:paddingVertical="10dp"
        android:paddingHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Tiêu đề và trạng thái -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/course_title"
                android:text="Web Development"
                android:paddingVertical="4dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <!--            status_stop-->
            <!--            android:background="@drawable/bg_status_stop"-->
            <!--            android:textColor="#D97706"-->
            <TextView
                android:id="@+id/course_status"
                android:text="Đang học"
                android:textSize="12sp"
                android:background="@drawable/bg_status_active"
                android:textColor="#16A34A"
                android:paddingVertical="6dp"
                android:paddingHorizontal="8dp"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/course_member"
                android:text="24"
                android:textSize="12sp"
                android:background="@drawable/bg_circle"
                android:drawableStart="@drawable/outline_group_24"
                android:drawablePadding="5dp"
                android:textColor="#6B7280"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

        </RelativeLayout>

        <!-- Giảng viên và thành viên -->
        <TextView
            android:id="@+id/course_description"
            android:text="Dạy lập trình Web từ cơ bản đến nâng cao."
            android:maxLines="2"
            android:minLines="2"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:textColor="#888888"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvmember"
            android:text="Minh Thảo • 28 thành viên"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:textColor="#888888"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tvtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Hoạt động 2h trước"
            android:layout_marginTop="2dp"
            android:textColor="#999999"
            android:textSize="12sp"
            android:visibility="visible"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/tvTimeCreate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tạo ngày: 03/06/2025"
                android:textColor="#888888"
                android:textSize="12dp"
                android:layout_alignBaseline="@+id/btnJoin"
                android:layout_alignParentStart="true"
                android:visibility="gone"/>
            <Button
                android:id="@+id/btnJoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Tham gia"
                android:textColor="#3B82F6"
                android:textSize="14sp"
                android:backgroundTint="#EBF5FF"
                android:visibility="gone"
                />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
